{
  "fps": 60,
  "mapping-file": "config/mapping.production.json",
  "log-level": 6,

  "hnode": {
    "lockRate": 25,

    "PORT_SERVER": 3737,
    "TIME_TICK": 100,
    "TIME_OFFLINE": 1000,
    "TIME_GONE": 3000,
    "NLEDS_STRIPS": 178,
    "NSTRIPS_CLIENT": 2
  },

  "sensors": {
    "mockable": {
      "interval": 20,
      "signal": "(x - Math.ceil(x/20 - 0.5)*20)"
    },
    "baudRate": 115200,
    "ports": ["/dev/tty.usbmodem1411"],
    "reconnection": {
      "maxAttempts": 1000,
      "delayBetweenAttempts": 1000
    },
    "cyclesThreshold": 1,
    "pulseSampleSize": 100,
    "pulseSampleLowPassSmoothing": 0.8,
    "adaptativePulseThresholdCoefficient": 0.25
  },

  "stripledLengths": {
    "default": 178,
    "sensor": 70
  },

  "colors": {
    "fallback": [128, 0, 128]
  }
}
