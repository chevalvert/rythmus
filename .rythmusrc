{
  "fps": 60,
  "mapping-file": "config/mapping.production.json",
  "log-level": 6,

  "stripledLengths": {
    "default": 178,
    "sensor": 70
  },

  "hnode": {
    "PORT_SERVER": 3737,
    "TIME_TICK": 100,
    "TIME_OFFLINE": 1000,
    "TIME_GONE": 3000,
    "NLEDS_STRIPS": 178,
    "NSTRIPS_CLIENT": 2
  },

  "players": {
    "colors": [
      ["blue", "green"],
      ["red", "yellow"]
    ],
    "easing": { "up": 0.5, "down": 0.09 }
  },

  "sensors": {
    "mockable": {
      "autoConnect": true,
      "interval": 20,
      "signal": "40 + (x - Math.ceil(x/(seed * 40) - 0.5)*(seed * 40))"
    },
    "baudRate": 115200,
    "ports": ["/dev/tty.usbmodem1411"],
    "reconnection": {
      "maxAttempts": 1000,
      "delayBetweenAttempts": 1000
    },
    "cyclesThreshold": 1,
    "adaptativePulseThresholdCoefficient": 0.25,
    "pulseSample": {
      "size": 128,
      "smoothing": 0.5,
      "boundariesAnalysisWindowSize": 32,
      "boundariesSmoothing": 0.5
    }
  }
}
