{
  "log-level": 8,
  "mapping-file": "config/mapping.dev.json",

  "hnode": {
    "PORT_SERVER": 3737,
    "NLEDS_STRIPS": 178,
    "NSTRIPS_CLIENT": 2
  },

  "sensors": {
    "mockable": {
      "interval": 20,
      "signal": "(x - Math.ceil(x/20 - 0.5)*20)"
    },
    "baudRate": 115200,
    "ports": ["/dev/tty.usbmodem1411"],
    "cyclesThreshold": 1,
    "pulseSampleSize": 128,
    "pulseSampleLowPassSmoothing": 0.8,
    "adaptativePulseThresholdCoefficient": 0.25
  }
}
