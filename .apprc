{

  "fps": 60,
  "log-level": 6,
  "mapping-file": "config/mapping.production.json",

  "animations": {
    "iddle": {
      "posterization": 4,
      "resolution": [0.2, 0.02],
      "speed": 0.01,
      "white": [40, 40, 40]
    },
    "invitation": {
      "contrast": 10,
      "speed": [0.05, 0.1]
    },
    "player-swirl": {
      "initialPositionWindow": [-2, 2],
      "minDelayBetweenTwoParticles": 100,
      "slope": 4,
      "trailLength": 5
    },
    "player-swirl-2": {
      "initialPositionWindow": [-20, 20],
      "minDelayBetweenTwoParticles": -1,
      "slope": 10,
      "trailLength": 100
    },
    "player-sinus": {
      "pulseAmplitude": 10,
      "frequence": 1,
      "bezier": [0.91, 0.01, 0.99, 0.29],
      "speed": {
        "default": 0.01,
        "pulsing": 0.5
      }
    },
    "player-sinus-double": {
      "pulseAmplitude": 10,
      "frequence": 2,
      "bezier": [0.91, 0.01, 0.99, 0.29],
      "speed": {
        "default": 0,
        "pulsing": 1
      }
    }
  },

  "hnode": {
    "CLIENT_FRAME_RATE": 60,
    "CORRECT_VOLTAGE_DROP": true,
    "NLEDS_STRIPS": 178,
    "NSTRIPS_CLIENT": 4,
    "PORT_SERVER": 3737,
    "TIME_GONE": 3000,
    "TIME_OFFLINE": 1000,
    "TIME_TICK": 100
  },

  "players": {
    "colors": [
      [255, 255, 255],
      [255, 0, 0]
    ],
    "sides": ["inside", "outside"],
    "direction": ["bottom", "top"],
    "easing": {"up": 1, "down": 0.09 }
  },

  "sensors": {
    "adaptativePulseThresholdCoefficient": 0.25,
    "baudRate": 115200,
    "cyclesThreshold": 1,
    "mapping": {
      "/dev/tty.usbmodem1411": 0,
      "/dev/tty.usbmodem1421": 18
    },
    "mockable": {
      "autoConnect": true,
      "interval": 100,
      "signal": "40 + (x - Math.ceil(x/(seed * 40) - 0.5)*(seed * 40))"
    },
    "pulseSample": {
      "boundariesAnalysisWindowSize": 32,
      "boundariesSmoothing": 0.5,
      "size": 128,
      "smoothing": 0.5
    },
    "reconnection": {
      "delayBetweenAttempts": 1000,
      "maxAttempts": 1000
    }
  },

  "sound": {
    "floatDecimals" : 3,
    "mixer": [0, 0.78],
    "mixerExponent": 2,
    "tracks": {
      "iddle": 1,
      "acts": [2, 3, 4, 5]
    },
    "notes": [
      [
        { "track": 6, "note": 24 },
        { "track": 7, "note": 36 },
        { "track": 8, "note": 36 },
        { "track": 9, "note": 44 },
        { "track": 10, "note": 43 },
        { "track": 11, "note": 36 },
        { "track": 12, "note": 37 },
        { "track": 13, "note": 37 },
        { "track": 14, "note": 36 },
        { "track": 15, "note": 24 }
      ],
      [
        { "track": 16, "note": 24 },
        { "track": 17, "note": 36 },
        { "track": 18, "note": 30 },
        { "track": 19, "note": 36 },
        { "track": 20, "note": 28 },
        { "track": 21, "note": 29 }
      ]
    ],
    "udp": {
      "debug": false,
      "handshakeMessage": "/ping",
      "local": {
        "address": "0.0.0.0",
        "port": 2223
      },
      "remote": {
        "address": "127.0.0.1",
        "port": 2222
      },
      "reconnection": {
        "delay": 10000,
        "attempts" : 30
      }
    }
  },

  "stripleds": {
    "blueDamping": [0.67, 1],
    "default": 178,
    "sensor": 68
  },

  "timeline": {
    "duration": 60000,
    "loop": true,
    "easings": {
      "zmin": 0.09,
      "zmax": 0.09,
      "thickness": 0.09,
      "pulse": 0.09
    },
    "properties": {
      "tracks": [1, 2, 3, 4],
      "zmin": [0, 0, 0, 0.25, 0.5, 0.5, 0.5, 0, 0.1, 0],
      "zmax": [1, 1, 1, 0.75, 0.5, 0.5, 0.5, 1, 0.1, 1],
      "thickness": [10, 10, 10, 44, 89, 89, 10],
      "pulse": [0, 0, 0, 1, 1, 0]
    }
  }

}
